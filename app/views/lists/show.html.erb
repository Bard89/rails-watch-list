<h1><%= @list.name %></h1>
<div>
  <%= link_to 'add a movie', new_list_bookmark_path(@list)%>
  <%= link_to 'detete this list', list_path(@list), method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } %>
</div>
<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <%= image_tag movie.poster_url, alt: movie.title%>
    <%= movie.title %>
    <%= movie.overview %>
      <div>
        <%= bookmark.comment %>
      </div>
      <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}%>
<% end %>
</div>
